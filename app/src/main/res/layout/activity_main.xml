<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Android 2019"
            android:layout_width="204dp"
            android:layout_height="34dp"
            android:id="@+id/txtAndroid" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp" android:textStyle="bold"
            android:textAlignment="center" android:textSize="18sp" android:textColorHint="#E91E63"
            android:textColor="#9C27B0"/>
    <TextView
            android:text="Andrea Berrones/ andygarza96"
            android:layout_width="344dp"
            android:layout_height="44dp"
            android:id="@+id/textView3"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textAlignment="center" android:textSize="18sp" android:textStyle="bold"
            android:textColor="#E91E63"/>
    <Button
            android:text="Hello World"
            android:layout_width="135dp"
            android:layout_height="46dp"
            android:id="@+id/btnHelloWorld" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtAndroid" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textColor="#673AB7" android:shadowColor="#F44336"
            android:backgroundTint="#FFFFFF" android:textStyle="bold"/>
    <Button
            android:text="Timefigther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTimeFigther" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnHelloWorld"
            android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>